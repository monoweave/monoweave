{
  "name": "@monoweave/node",
  "version": "2.2.0",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "https://github.com/monoweave/monoweave.git",
    "directory": "packages/node"
  },
  "author": {
    "name": "noahnu",
    "url": "https://monoweave.github.io/monoweave/"
  },
  "license": "BSD-3",
  "publishConfig": {
    "main": "./lib/index.js",
    "registry": "https://registry.npmjs.org/",
    "types": "./lib/index.d.ts",
    "exports": {
      ".": {
        "types": "./lib/index.d.ts",
        "default": "./lib/index.js"
      },
      "./testUtils": {
        "types": "./lib/testUtils.d.ts",
        "default": "./lib/testUtils.js"
      }
    },
    "access": "public"
  },
  "group": "monoweave",
  "main": "./src/index.ts",
  "exports": {
    ".": "./src/index.ts",
    "./testUtils": "./src/testUtils.ts"
  },
  "files": [
    "lib"
  ],
  "scripts": {
    "clean": "run workspace:clean \"$(pwd)\"",
    "types:watch": "run workspace:types:watch \"$(pwd)\"",
    "test:watch": "run workspace:test:watch \"$(pwd)\"",
    "build:watch": "run workspace:build:watch \"$(pwd)\"",
    "prepack": "run workspace:build \"$(pwd)\""
  },
  "devDependencies": {
    "@monoweave/test-utils": "workspace:*",
    "@types/micromatch": "^4.0.10",
    "@types/node": "^22.18.13",
    "vitest": "^4.0.15"
  },
  "dependencies": {
    "@monoweave/changelog": "workspace:^2.2.0",
    "@monoweave/dependencies": "workspace:^2.2.0",
    "@monoweave/git": "workspace:^2.2.0",
    "@monoweave/io": "workspace:^2.2.0",
    "@monoweave/logging": "workspace:^2.2.0",
    "@monoweave/publish": "workspace:^2.2.0",
    "@monoweave/types": "workspace:^2.2.0",
    "@monoweave/versions": "workspace:^2.2.0",
    "@yarnpkg/cli": "^4.12.0",
    "@yarnpkg/core": "^4.5.0",
    "@yarnpkg/fslib": "^3.1.4",
    "@yarnpkg/plugin-npm": "^3.4.0",
    "@yarnpkg/plugin-pack": "^4.0.4",
    "@yarnpkg/shell": "^4.1.3",
    "micromatch": "^4.0.8",
    "tapable": "^2.3.0"
  }
}
