{
  "name": "@monoweave/node",
  "version": "1.20.2",
  "repository": {
    "type": "git",
    "url": "https://github.com/monoweave/monoweave.git",
    "directory": "packages/node"
  },
  "author": {
    "name": "noahnu",
    "url": "https://monoweave.github.io/monoweave/"
  },
  "license": "BSD-3",
  "publishConfig": {
    "main": "./lib/index.js",
    "registry": "https://registry.npmjs.org/",
    "types": "./lib/index.d.ts",
    "exports": {
      ".": {
        "types": "./lib/index.d.ts",
        "default": "./lib/index.js"
      },
      "./testUtils": {
        "types": "./lib/testUtils.d.ts",
        "default": "./lib/testUtils.js"
      }
    },
    "access": "public"
  },
  "group": "monoweave",
  "main": "./src/index.ts",
  "exports": {
    ".": "./src/index.ts",
    "./testUtils": "./src/testUtils.ts"
  },
  "files": [
    "lib"
  ],
  "scripts": {
    "clean": "run workspace:clean \"$(pwd)\"",
    "types:watch": "run workspace:types:watch \"$(pwd)\"",
    "test:watch": "run workspace:test:watch \"$(pwd)\"",
    "build:watch": "run workspace:build:watch \"$(pwd)\"",
    "prepack": "run workspace:build \"$(pwd)\""
  },
  "devDependencies": {
    "@jest/globals": "^30.0.0-alpha.6",
    "@monoweave/test-utils": "workspace:*",
    "@types/micromatch": "^4.0.9",
    "@types/node": "^22.10.5"
  },
  "dependencies": {
    "@monoweave/changelog": "workspace:^1.20.1",
    "@monoweave/dependencies": "workspace:^1.20.0",
    "@monoweave/git": "workspace:^1.20.1",
    "@monoweave/io": "workspace:^1.20.0",
    "@monoweave/logging": "workspace:^1.20.0",
    "@monoweave/publish": "workspace:^1.20.2",
    "@monoweave/types": "workspace:^1.20.0",
    "@monoweave/versions": "workspace:^1.20.2",
    "@yarnpkg/cli": "^4.10.3",
    "@yarnpkg/core": "^4.4.4",
    "@yarnpkg/fslib": "^3.1.3",
    "@yarnpkg/plugin-npm": "^3.3.2",
    "@yarnpkg/plugin-pack": "^4.0.4",
    "@yarnpkg/shell": "^4.1.3",
    "micromatch": "^4.0.8",
    "tapable": "^2.2.1"
  }
}
